# asks user to input number
num = int(input("input number:"))

# checks if this number is odd even, or multiple of 4
if num % 4 == 0:
    print(f"number {num} is a multiple of 4")
elif num % 2 == 0:
    print(f"number {num} is even")
else:
    print(f"number {num} is odd")

# asks user to input second number
check = int(input("input second number:"))

# checks if the first one can be devided by this second, new number
if num % check == 0:
    print(f"{num} can be divided by {check}")
else:
    print(f"{num} can't be divided by {check}")
